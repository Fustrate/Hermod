{
  "name": "Hermod",
  "version": "0.0.1",
  "main": "./dist/js/index.js",
  "scripts": {
    "start": "npm run compile:all && ./node_modules/.bin/electron .",
    "compile:all": "npm run compile:js && npm run compile:css && npm run compile:html && npm run compile:fonts",
    "compile:js": "coffee --compile --output dist/js src/js",
    "compile:css": "sass -Cq --update src/css:dist/css --sourcemap=none",
    "compile:html": "mkdir -p dist/html; cp -R src/html dist",
    "compile:fonts": "mkdir -p dist/fonts; cp -R src/fonts dist"
  },
  "dependencies": {
    "keytar": "^4.0.3",
    "node-notifier": "^4.6.1",
    "request": "^2.81.0",
    "websocket": "^1.0.24",
    "@paulcbetts/system-idle-time": "^1.0.4"
  },
  "devDependencies": {
    "coffeescript": "^1.12.6",
    "electron": "^1.6.8"
  },
  "repository": "https://github.com/ValenciaMgmt/Hermod",
  "license": "UNLICENSED",
  "private": true
}
