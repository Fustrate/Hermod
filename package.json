{
  "name": "Hermod",
  "description": "Intra-office messaging",
  "version": "0.0.1",
  "author": {
    "name": "Steven Hoffman",
    "email": "admin@valenciamgmt.com",
    "url": "https://valencia.management/"
  },
  "repository": "https://github.com/ValenciaMgmt/Hermod",
  "license": "UNLICENSED",
  "private": true,
  "main": "./compiled/js/index.js",
  "scripts": {
    "start": "npm run compile:all && ./node_modules/.bin/electron .",
    "compile:all": "npm run compile:js && npm run compile:css && npm run compile:html && npm run compile:fonts",
    "compile:js": "coffee --compile --output compiled/js src/js",
    "compile:css": "sass -Cq --update src/css:compiled/css --sourcemap=none",
    "compile:html": "mkdir -p compiled/html; cp -R src/html compiled",
    "compile:fonts": "mkdir -p compiled/fonts; cp -R src/fonts compiled",
    "pack": "electron-builder --dir",
    "dist:win": "electron-builder -w",
    "dist:mac": "electron-builder -m",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "@paulcbetts/system-idle-time": "^1.0.4",
    "application-config": "^1.0.1",
    "arch": "^2.1.0",
    "electron-localshortcut": "^2.0.2",
    "keytar": "^4.0.3",
    "node-notifier": "^5.1.2",
    "process-nextick-args": "^1.0.7",
    "request": "^2.81.0",
    "websocket": "^1.0.24"
  },
  "devDependencies": {
    "coffeescript": "^1.12.6",
    "electron": "^1.7.3",
    "electron-builder": "^19.8.0",
    "electron-rebuild": "^1.5.11"
  }
}
